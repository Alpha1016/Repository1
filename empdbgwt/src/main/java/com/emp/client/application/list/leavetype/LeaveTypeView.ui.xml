<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel 
	>

		<table align="center">
			<hr />
			<tr>
				<td>
					<g:Label>Changing assigned leaves for</g:Label>
				</td>
				<td>
					<g:Label ui:field="namelabel"></g:Label>
				</td>
			</tr>
			<tr>
				<td>

				</td>
				<td>
					<h3> LeaveType Details</h3>
				</td>
			</tr>


			<tr>
				<td>
					<g:ListBox ui:field="availableleaves" multipleSelect="true"
						title="Allowed leavetype" width="150px">
						<g:item value='1'>
							CASUALLEAVE
						</g:item>
						<g:item value='2'>
							SICKLEAVE
						</g:item>

						<g:item value='3'>
							PRIVILEGEDLEAVE
						</g:item>
					</g:ListBox>
				</td>
				<td>
					<g:Button ui:field="addButton"> ADD </g:Button>
					<g:Button ui:field="delButton"> DELETE </g:Button>
				</td>
				<td>
					<g:ListBox ui:field="assignedleaves" multipleSelect="true"
						title="Assigned leavetype" width="150px">
					</g:ListBox>
				</td>
			</tr>
		</table>



		<table align="center">
			<tr>
				<td>
					<g:Button ui:field="saveButton">SAVE</g:Button>
				</td>
			</tr>
		</table>

	</g:HTMLPanel>
</ui:UiBinder>
